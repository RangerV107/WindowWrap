<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowWrap.View"
             xmlns:hc="https://handyorg.github.io/handycontrol" x:Class="WindowWrap.View.WindowView"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d"
             Background="White"
             d:DesignHeight="450" d:DesignWidth="800">
    <DockPanel>
        <Grid>
            <local:WindowBox WindowParentPtr="{Binding SelectedParentWindowPtr}" 
                             WindowPtr="{Binding SelectedWindowPtr}"
                             WindowState="{Binding SelectedWindowState}" Margin="0"/>
        </Grid>
    </DockPanel>
</UserControl>
